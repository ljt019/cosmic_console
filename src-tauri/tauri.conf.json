{
  "$schema": "https://schema.tauri.app/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "cosmic-console",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["**"]
      },
      "fs": {
        "scope": ["read:all", "write:all"]
      },
      "http": {
        "all": true,
        "scope": ["http://192.168.1.199:8080/*"]
      }
    },
    "windows": [
      {
        "title": "Cosmic Console",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "url": "splashscreen.html"
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset:; media-src 'self' asset: https://asset.localhost;",
      "devCsp": null
    },
    "bundle": {
      "active": true,
      "targets": "nsis",
      "identifier": "com.cosmicconsole.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": ["assets/movies/"]
    }
  }
}
